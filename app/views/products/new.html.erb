<!DOCTYPE html>
<html>
  <head>
  
    <title>Create Product</title>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'welcome' %>
    
  </head>


  <body>

    <div class="container">   
    <div style="padding:1%"></div>
    <% if current_user.stripe_user_id %>
        <div class="row no-gutters" id="productrow">
            <div class="col nopadding" id="info">
             <div style="padding:1%"></div>
                <h1 class="heading" style="text-align:center ">Create your Product</h1>
                <%= render 'form', product: @product %>
                
            </div>
        </div>
        <%else%>
         <div class="row no-gutters" id="productrow">
            <div class="col nopadding" id="info">
             <div style="padding:1%"></div>
                <h1 class="heading" style="text-align:center ">You need to connect with stripe before you create a product so that you can recieve payments</h1>
                
                   <%= link_to image_tag("ConnectwithStripe.png", width:"120px", height:"auto"), stripe_create_url,  method: :post, params: {current_user: current_user}, remote: true %>
            </div>
        </div>
        <%end%>
    </div>
     
  </body>
</html>