<br>
<% Product.where(user_id: session[:user_id]).order('created_at DESC').each_slice(3)  do |products| %>
    <div class="row no-gutters" id="pro">
        <% products.each do |product| %> 
        <div class="col-md-4 ">
            <div class="card">
                <h5 class="card-title">
                    <div class ="col-md-6 nopadding" >
                        <%= product.name %>
                    </div>
                </h5>
                    <br>
                    <% if product.image.present? %>
                    <%= image_tag(product.image, class:"card-img-top")%> 
                    <% else %>
                    <%= image_tag( '/loginImage.jpg', class:"card-img-top") %> 
                     <% end %>
                     <br>
                    <div class="card-body">
                    <br>
                    <div class ="col-md-6 nopadding" >
                        $<%= number_with_precision(product.price, :precision => 2)%>
                    </div>
                    <%= link_to "edit/delete", products_path(action: "edit", product: product), class: 'btn btn-primary' %>
                    <br>
                    <div class ="col-md-12">
                        <p class="card-text"><%= product.description %></p>
                    </div>
                </div>   
            </div>
        </div>
        <% end %>
    </div>
<% end %>