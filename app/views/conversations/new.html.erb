<%= stylesheet_link_tag 'message', media: 'all'%>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">


<h1 > New Conversation </h1>
<%= form_tag conversations_path, method: :post do %>
    <div>
    <%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :username) %>
    </div>
    <div>
    <%= text_field_tag :subject, nil,  placeholder: "Subject" %>

    </div>
    <div>
    <%= text_area_tag :body, nil, placeholder: "Leave a comment"%>
    </div>

    <%= submit_tag %>
<% end %>